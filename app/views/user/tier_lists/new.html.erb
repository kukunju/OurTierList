<div class="container">
  <%= render "user/error_messages", resource: @tier_list %>
  <div>
    <table>
      <tr>
        <td>テーマ名</td>
        <td><%= @theme.name %></td>
      </tr>
      <tr>
        <td>タグ</td>
        <td>
          <% @theme.tags.each do |tag| %>
            <%=tag.name%>,
          <% end %>
        </td>
      </tr>
    </table>
  </div>

  <div>
    <%= render 'tier_list_create', theme: @theme %>
  </div>

  <%= form_with model: [@theme, @tier_list] do |f| %>
    <div>
      <label for="tier_list_comment">コメント</label><br>
      <%= f.text_area :comment %>
    </div>
    <%= f.submit "Create TierList",data: { disable_with: '送信中' } %>
  <% end %>

</div>


