<div class="container">
  <table class="row-5 mx-auto border">
    <tr>
      <td class="pr-5">作者</td>
      <td><%= @tier_list.user.name %></td>
    </tr>
    <tr>
      <td >テーマ名</td>
      <td><%= @tier_list.theme.name %></td>
    </tr>
    <tr>
      <td>投稿日時</td>
      <td><%= @tier_list.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
    </tr>
    <tr>
      <td>コメント</td>
      <td><%= @tier_list.comment %></td>
    </tr>
  </table>


<div class="d-flex flex-column my-5">
  <%= render "tier_list_show", tier_list: @tier_list %>

  <div class="d-flex">
    <div class="mr-auto" id="favorite-btn-<%= @tier_list.id %>" >
      <%= render "user/favorites/favorite_btn", tier_list: @tier_list %>
    </div>

    <div class="row d-flex justify-content-start">
      <%= link_to "このテーマでTierListを作成", new_theme_tier_list_path(@tier_list.theme.id), class: "btn btn-info" %>
        <% if @tier_list.user.id == current_user.id %>
        <%= link_to "編集", edit_tier_list_path(@tier_list.id) ,class: "btn btn-info" %>
        <%= link_to "削除まだ", edit_tier_list_path(@tier_list.id) ,class: "btn btn-info" %>
      <% end %>
    </div>
  </div>


</div>

  <div>
    <h5 class="offset-1">コメント</h5>
    <div class="p-1 mb-2 bg-primary"></div>

    <%= render "user/comments/comments_index", tier_list: @tier_list, comments: @comments %>

  </div>

  </div>





