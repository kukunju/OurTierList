<div class="col-5 mx-auto">
  <h1>プロフィール編集</h1>
  <%= render "user/error_messages", resource: @user %>

  <%= form_with model: @user do |f| %>

    <div class="form-group">
      <label for="user_name">ユーザー名</label><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <label for="user_introduction">メールアドレス</label><br>
      <%= f.text_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <label for="user_profile_image">プロフィール画像</label><br>
      <%= f.file_field :profile_image, accept: "image/*" %>
    </div>



    <div class="d-flex justify-content-between">
      <%= f.submit '更新', class: "btn btn-success",style: "width: 200px;" %>
      <a href="/users/leave" class="btn btn-danger">退会</a>
    </div>

  <% end %>
</div>